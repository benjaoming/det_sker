<p id="notice"><%= notice %></p>

<h1><%= @event.title %></h1>
<%= image_tag @event.picture.url(:original) %>
<p>
  <%= @event.short_description %>
  <%= @event.long_description %>
</p>

<p>
  <strong>Location:</strong>
  <%= link_to(@event.location.name, location_path(@event.location)) %>
</p>

<% if @event.link.present? %>
<p>
  <%= link_to(t('.link'), @event.link) %>
</p>
<% end %>
<% if @event.comments_enabled? %>
 <%= render partial: 'events/comments/list', locals: {comments: @event.comments} %>
 <%= render partial: 'comments/form', locals: { event: @event } if user_signed_in? %>
<% end %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>