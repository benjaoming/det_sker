<%= form_for @event do |f| %>
    <% if @event.errors.any? %>
        <div id='error_explanation'>
          <h2>
            <%= pluralize(@event.errors.count, 'error') %>
            prohibited this post from being saved
          </h2>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= label_tag :title %>
    <%= f.text_field :title %>
    <%= label_tag :creator %>
    <%= f.text_field :creator %>
    <%= label_tag :short_description %>
    <%= f.text_area :short_description, maxlength: 200 %>
    <%= label_tag :long_description %>
    <%= f.text_area :long_description %>
    <%= label_tag :location %>
    <%= f.select(:location, location_options) %>
    <%= label_tag :category %>
    <%= f.select(:category, category_options) %> <br/>
    <%= label_tag :start_time %>
    <span class='select_group'>
    <%= f.datetime_select :start_time %>
      </span>
    <%= label_tag :end_time %>
    <span class='select_group'>
      <%= f.datetime_select :end_time %>
    </span>
    <%= f.submit 'Create' %>
<% end %>