
<div class='event-container'
     data-categories="<%= categories_as_string(event.categories) %>"
     data-location="<%= event.location.display_name.parameterize('_') %>"
     data-role="event" data-parent="<%= parent_id if defined? parent_id%>">
  <div class="row">
    <span class="col-xs-2 col-md-2 col-md-push-9">
          <% event.categories.each do |cat| %>
            <span class="event-category"><%= cat.key.titleize %></span>
          <% end %>
    </span>
  </div>
  <span class="event-topbar_js">

       <span class="col-xs-12 col-md-8 col-md-push-1 event-title">
       	<%= title_display(event) %>
	   </span>


	    <span class="col-xs-1 col-md-1 col-md-pull-8">
            <%# In the frontpage context we don't show a date, otherwise, do. %>
            <% if defined? show_date %>
                <%= format_datetime(event.start_time)  %>
            <% else %>
                <%= format_starttime(event.start_time) %>
            <% end %>
        </span>
   	</span>
    <span class="col-xs-2 col-md-2">
      <a href="<%= url_for(event.location) %>"title="<%= event.location.description.truncate(120) %>"
         data-toggle='popover' data-placement='top' data-trigger="click hover focus" data-html="true">
        <%= event.location.display_name %>
      </a>
    </span>
  <% if current_user && current_user.can_edit?(event) %>
      <div class="pull-right">
        <div class="btn-group">
          <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t('.edit'), edit_event_path(event) %></li>
            <li><%= link_to t('.delete'), event, data: { method: :delete, confirm: t('.confirm_delete') } %></li>
          </ul>
        </div>
      </div>
  <% end %>
  	<div class='event-details'>
  		<div class="col-xs-12 col-md-11 col-md-offset-1">
    		<p><%= link_to event.user.username, event.user  if event.user%></p>
    	</div>
    	<div class="col-xs-12 col-md-8 col-md-offset-1">
    		<p class="event-description"> <%= event.short_description.truncate(160, separator: ' ') %></p>
            <p><%= link_to t('.see_more'), event %> </p>
        </div>
		<div class="col-xs-12 col-md-8 col-md-offset-1">
	      <p><strong>Starter: </strong><%= format_datetime(event.start_time) %></p>
    	  <p><strong>Slutter: </strong><%= format_datetime(event.end_time) %></p>
          <% if event.comments_enabled? %>
            <%= link_to event_path event do %>
              <p><%= t '.comments' %>: <%= event.comments.size %></p>
            <% end %>
          <% end %>
    	<p class="event-price"><strong>Pris: </strong><%= event.price %></p>
    	</div>
  </div>
</div>
