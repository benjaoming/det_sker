<h1>Events#new</h1>
<%= form_for @event, url: {action: 'create'} do |f| %>
    <%= f.text_field :title %>
    <%= f.text_field :creator %>
    <%= f.text_area :description %>
    <%= f.text_field :location %>
    <%= f.text_field :category %>
    <%= f.datetime_select :start_time %>
    <%= f.datetime_select :end_time %>
<% end %>
