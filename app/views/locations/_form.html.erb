<% is_remote = defined?(remote) ? remote : true %> 
<%= simple_form_for(@location, data: { remote: is_remote }, html: { class: 'form-horizontal' }, defaults: {
                                     wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }
    ) do |f| %>
    <%= f.input :name  %>
    <%= f.input :street_address %>
    <%= f.input :postcode %>
    <%= f.input :town %>
    <%= f.input :description, as: :string %>
    <%= f.input :link, as: :url %>
    <br/>
    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>