<%= link_to t('events.form.new_cat_button'), new_category_path,
            data: { remote: true, toggle: 'modal', target: 'remote_form_modal'} %>
<dl class="dl-horizontal">
  <% @categories.each do |category| %>
      <dt><%= category.danish.titleize %></dt>
      <% if current_user && current_user.is_admin? %>
          <dd><%= link_to t(:edit), category %></dd>
      <% end %>
  <% end %>
</dl>
<%= render partial: 'layouts/modal_wrapper' %>