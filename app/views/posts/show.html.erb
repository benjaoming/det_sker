<h1>
  <%= @post.title %>
</h1>

<p>
  <%= simple_format @post.body %>
</p>

<% if current_user.present? && current_user.is_admin? %>
	<%= link_to 'Edit', edit_post_path(@post) %>  |
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>  |
<% end %> 
<%= link_to t(:back), posts_path %>
