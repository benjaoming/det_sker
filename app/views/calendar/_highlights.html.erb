<div class="container">
  <div class="row featured-container">
    <div class="col-md-8">
      <h2 class="section-heading">Den kommende uge</h2>

      <% highlights.each do |event| %>
          <div class="upcoming-event row">
            <div class="col-xs-4">
              <% if event.best_picture.present? %>
                  <%= link_to event do %>
                      <%= image_tag event.best_picture.url(:thumb), class: 'img-responsive center-block' %>
                  <% end %>
              <% end %>
            </div>
            <div class="col-xs-8">
              <div class="row">
                <div class="event-date col-xs-8">
                  <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                  <%= I18n.localize(event.start_time, format: :header) %>
                </div>
                <div class="event-place col-xs-4">
                  <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                  <%= event.location.display_name %>
                </div>
              </div>
              <h3 class="upcoming-event-title"><a href="#"><%= event.title %></a></h3>
              <p>
                <%= event.short_description %>
              </p>

            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>