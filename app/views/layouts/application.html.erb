<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    <%#
    Make our translations accessible to javascript
    Note that it needs to be here rather than in javascript
    as javascript will be precompiled makings its variables static.
    #%>
    window.i18n = <%= current_translations.to_json.html_safe %>;
    window.locale = '<%= I18n.locale %>';
  </script>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="tagline-text">
      <p>Duk dig ikke</p>
    </div>
    <div class="header-text col-xs-12">
        <%= link_to image_tag("dukopheader.png", alt:"DukOp logo", width:"80%", height:"80%"), root_path %>
    </div>
  </div>
</div>

<!-- Menu navigation bar -->
<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
        <span class="sr-only">Toggle main navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-user">
        <span class="sr-only">Toggle main navigation</span>
        <%= bootstrap_glyphicon('user') %>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="navbar-user">
      <ul class="nav navbar-nav">

        <li class="menu-text dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            <%= bootstrap_glyphicon('user') %>
        		<% if current_user %><span class="caret"></span>
              <%= current_user.username %>
            <% else %>
              User stuff<span class="caret"></span>
            <% end %>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t('titles.events.new'), new_event_path %></li>
        		<% if current_user %>
              <li>
                <%= link_to current_user, class: '' do %>
                  <%= current_user.username %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: '' do %>
                  <%= t('.logout') %>
                <% end %>
              </li>
              <% if current_user.is_admin? %>
                <li class="menu-text"><%= link_to t('.categories'), categories_path %></li>
                <li class="menu-text"><%= link_to t('.users'), users_path %></li>
              <% end %>
        		<% else %>
              <li>
                <%= link_to t('.create_account'), page_path('new_account'), class: '' %>
              </li>
              <li>
                <%= link_to user_session_path, class: '' do %>
                  <%= t('.login') %>
                <% end %>
              </li>
        		<% end %>            
          </ul>
        </li>

		    <%= render partial: 'layouts/lang_selector' %>

  		</ul>
    </div>

    <div class="collapse navbar-collapse" id="navbar-main">
      <ul class="nav navbar-nav">
        <li class="menu-text"><%= link_to t('.calendar'), root_path %></li>
        <li class="menu-text"><%= link_to t('.locations'), locations_path %></li>
        <li class="menu-text dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
            <%= t('.about') %><span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t('.about_project'), page_path('about') %></li>
            <li><%= link_to t('.security'), page_path('security') %></li>
          </ul>
        </li>
      </ul>
    </div>

  </div>
</nav>

<div class="container">
  <div class="row">
     <% if notice.present? %>
        <%= bootstrap_success(notice) %>
     <% end %>
    <% if alert.present? %>
        <%= bootstrap_danger(alert) %>
    <% end %>
  </div>
	<%= yield %>
		</div>
	</div>
</div>
</body>
</html>
